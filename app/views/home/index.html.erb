<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <!-- Hero Section -->
  <div class="py-12 text-center">
    <h1 class="mb-4 text-4xl font-bold text-gray-900 md:text-5xl">
      <%= t('.hero_title') %>
    </h1>
    <p class="mx-auto mb-8 max-w-2xl text-lg text-gray-600">
      <%= t('.hero_subtitle') %>
    </p>
    <%= link_to t('.browse_articles'), articles_path, class: "inline-block rounded-md bg-gray-900 px-6 py-3 text-white hover:bg-gray-800" %>
  </div>

  <!-- Recent Articles -->
  <div class="py-12">
    <h2 class="mb-6 text-2xl font-bold text-gray-900"><%= t('.recent_articles') %></h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @recent_articles.each do |article| %>
        <%= render partial: "articles/card", locals: { article: article, formatted: nil } %>
      <% end %>
    </div>
  </div>
</div>
