<h1>All Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <strong><%= link_to article.title, article_path(article) %></strong><br>
      <em>by <%= article.author %></em> | <%= article.category %> | 
      Published: <%= article.publish_date %>
      <p><%= article.excerpt %></p>
    </li>
    <hr>
  <% end %>
</ul>
